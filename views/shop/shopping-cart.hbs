{{# if products}}

<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{# each products}}
        <li class="list-group-item">
          <span class="badge float-right">{{this.qty}}</span>
          <strong>{{this.item.title}}</strong>
          <span class="label label-success">${{this.price}}</span>
          <div class="btn-group btn-group-sm">
            <button type="button" class="btn btn-primary btn-xs dropdown-toggle" name="button">
              Action
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li><a href="#">Reduce by one</a></li>
              <li><a href="#">Remove All</a></li>
            </ul>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong>Total:{{this.totalPrice}}</strong>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/checkOut" class="btn btn-success">checkout</a>
  </div>
</div>
{{else}}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong>No ite s in the cart</strong>
  </div>
</div>
{{/if}}
